<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_10"
    android:orientation="vertical">

    <Button
        android:id="@+id/bClearAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/setting_clear_cache"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/bClearLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/setting_clear_local"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/bClearOnline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/setting_clear_online"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/bClearDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/setting_clear_download"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/bClearTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/setting_clear_task"
        android:textColor="@color/colorWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_version"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_18"/>

        <TextView
            android:id="@+id/tvSettingVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/colorBlack_Half"
            android:textSize="@dimen/text_size_18"/>
    </LinearLayout>
</LinearLayout>