<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.VideoPlayerActivity">

    <RelativeLayout
        android:id="@+id/layoutAll"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_height">

        <com.nepalese.virgovideoplayer.presentation.component.LocalVideoPlayer
            android:id="@+id/videoPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

        <include
            layout="@layout/layout_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"/>

        <include
            layout="@layout/layout_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutAll">

        <GridView
            android:id="@+id/gridViewVideoList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="@dimen/margin_15"
            android:divider="@color/colorGray"
            android:numColumns="2"/>
    </RelativeLayout>
</RelativeLayout>