<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/video_local"
            android:textColor="@color/colorTY"
            android:textSize="@dimen/text_size_25"/>

        <ImageButton
            android:id="@+id/ibList"
            android:layout_margin="@dimen/margin_5"
            android:layout_width="@dimen/icon_24"
            android:layout_height="@dimen/icon_24"
            android:src="@mipmap/icon_list"
            android:scaleType="centerInside"
            android:background="@drawable/selector_button_transparent" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:background="@color/colorGray"/>

    <ListView
        android:layout_below="@id/view"
        android:padding="@dimen/padding_3"
        android:id="@+id/listViewVideoLocal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="@dimen/margin_3"
        android:divider="@color/colorTY_Little" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tvNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_no_file"
        android:textSize="@dimen/text_size_25"
        android:textColor="@color/colorRed"
        android:visibility="invisible"/>

    <scut.carson_ho.kawaii_loadingview.Kawaii_LoadingView
        android:layout_below="@id/view"
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        android:visibility="invisible"
        app:blockColor="@color/colorTY"

        app:lineNumber="3"
        app:fixBlock_Angle="5"
        app:moveBlock_Angle="20"

        app:blockInterval="8dp"
        app:half_BlockWidth="15dp"
        app:initPosition="0"

        app:isClock_Wise="false"
        app:moveSpeed="500"
        app:move_Interpolator="@android:anim/bounce_interpolator"/>
</RelativeLayout>